#/bin/bash
sudo docker container run \
     -it --rm \
     --name devbox \
     -h devbox \
     -v $HOME/.gitconfig:/root/.gitconfig \
     -v `pwd`:/work \
     -v $HOME/bin:/root/bin/ \
     -v /var/run/docker.sock:/var/run/docker.sock \
     -v $HOME:$HOME \
     -v $HOME/.ssh:/root/.ssh \
     -w /work \
     bryandollery/devbox
